<Window
    x:Class="DLLSample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DLLSample"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DLLSample"
    Width="480"
    Height="320"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <StackPanel>
        <WrapPanel Margin="20" Orientation="Horizontal">
            <TextBox
                x:Name="PathText"
                Width="200"
                IsReadOnly="True" />
            <Button
                Margin="10,0,0,0"
                Click="ChooseFile"
                Content="选择文件" />
            <Button
                Margin="10,0,0,0"
                Click="Print"
                Content="打印" />
        </WrapPanel>
        <TextBox
            x:Name="ResultText"
            Margin="20"
            BorderThickness="0"
            IsReadOnly="True" />
    </StackPanel>
</Window>
